    Protected Sub gvLista_RowCommand(ByVal sender As Object, ByVal e As System.Web.UI.WebControls.GridViewCommandEventArgs) Handles gvLista.RowCommand
        If e.CommandName = "Editar" Then
            RaiseEvent Editando(CInt(e.CommandArgument))
        End If
    End Sub

    Protected Sub gvLista_RowDataBound(ByVal sender As Object, ByVal e As System.Web.UI.WebControls.GridViewRowEventArgs) Handles gvLista.RowDataBound
        If e.Row.RowType = DataControlRowType.DataRow Then
            If Me.PermitirEliminar Then 
                Dim a As LinkButton = CType(e.Row.FindControl("LinkButton1"), LinkButton)
                a.Attributes.Add("onclick", "if(!window.confirm('¿Esta seguro de Eliminar el Registro?')){return false;}")
            End If
            Dim lbDetalle As LinkButton 
            lbDetalle = e.Row.FindControl("LinkButtonDetalle") 
            Dim mLabelID_TEMA_CURSO As Label
            mLabelID_TEMA_CURSO = e.Row.FindControl("Label_ID_TEMA_CURSO")
            mLabelID_TEMA_CURSO.Visible = Not Me.PermitirEditar
            lbDetalle.Visible = Me.PermitirEditar
            If Me.VerID_AREA_FORMACION Then
                Dim mDdlAREA_FORMACION As SGAFP.WebUC.ddlAREA_FORMACION
                mDdlAREA_FORMACION = e.Row.FindControl("DdlAREA_FORMACION1")
                If lDdlAREA_FORMACION Is Nothing Then
                    lDdlAREA_FORMACION = New SGAFP.WebUC.ddlAREA_FORMACION
                    lDdlAREA_FORMACION.Recuperar()
                End If
                Dim mAREA_FORMACION As String
                mAREA_FORMACION = CType(e.Row.FindControl("Label_ID_AREA_FORMACION1"), Label).Text
                Dim lItem As ListItem = lDdlAREA_FORMACION.Items.FindByValue(mAREA_FORMACION)
                If mAREA_FORMACION <> "" And Not lItem Is Nothing Then
                    mDdlAREA_FORMACION.Items.Add(New ListItem(lItem.Text, lItem.Value))
                    mDdlAREA_FORMACION.SelectedValue = mAREA_FORMACION
                End If
            End If
            If Me.PermitirSeleccionar Then
                Dim a As LinkButton = CType(e.Row.FindControl("LinkButton_Seleccionar"), LinkButton)
                a.Text = Me.TextoSeleccionar
                a.CommandName = Me.ComandoSeleccionar
                If a.CommandName = "Check" Then
                    CType(e.Row.FindControl("CheckBox_Seleccionar"), CheckBox).Visible = True
                    a.Visible = False
                End If
            End If

        End If
    End Sub
 
    Private Sub gvLista_RowDeleting(ByVal source As System.Object, ByVal e As System.Web.UI.WebControls.GridViewDeleteEventArgs) Handles gvLista.RowDeleting
        If Me.mComponente.EliminarCURSO_TEMA(CDec(CType(Me.gvLista.Rows(e.RowIndex).FindControl("LinkButton1"), LinkButton).ToolTip)) <> 1 Then
            'Si se cometio un error
            Me.AsignarMensaje("Error al Eliminar Registro", True, True)
            e.Cancel = True
        Else
            If Me.CargarDatos() <> 1 Then
                Me.AsignarMensaje("Error al Recuperar Lista", True, True)
            End If
        End If
    End Sub
 
    Private Sub gvLista_SelectedIndexChanging(ByVal sender As Object, ByVal e As System.Web.UI.WebControls.GridViewSelectEventArgs) Handles gvLista.SelectedIndexChanging
        RaiseEvent Seleccionado(CDec(CType(Me.gvLista.Rows(e.NewSelectedIndex).FindControl("LinkButton1"), LinkButton).ToolTip))
    End Sub

    Protected Sub gvLista_PageIndexChanging(ByVal sender As Object, ByVal e As System.Web.UI.WebControls.GridViewPageEventArgs) Handles gvLista.PageIndexChanging
        Me.gvLista.PageIndex = e.NewPageIndex
        If Me.ViewState("PorAREA_FORMACION") Then
            Me.CargarDatosPorAREA_FORMACION(Me.ViewState("ID_AREA_FORMACION"))
            Return
        End If
        Me.CargarDatos()
    End Sub

    Public Function DevolverSeleccionados() As listaCURSO_TEMA
        Dim mLista As New listaCURSO_TEMA
        For Each mRow As GridViewRow In Me.gvLista.Rows
            If CType(mRow.FindControl("CheckBox_Seleccionar"), CheckBox).Checked Then
                Dim mEntidad As New CURSO_TEMA
                mEntidad.ID_TEMA_CURSO = CInt(CType(mRow.FindControl("Label_ID_TEMA_CURSO"), Label).Text)
                mLista.Add(mEntidad)
            End If
        Next
        Return mLista
    End Function

