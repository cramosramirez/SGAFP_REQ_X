    Public Function DevolverSeleccionados() As listaESTADO_SOLICITUD
        Dim mLista As New listaESTADO_SOLICITUD
        For Each mRow As GridViewRow In Me.gvLista.Rows
            If CType(mRow.FindControl("CheckBox_Seleccionar"), CheckBox).Checked Then
                Dim mEntidad As New ESTADO_SOLICITUD
                mEntidad.ID_ESTADO_SOLICITUD = CInt(CType(mRow.FindControl("Label_ID_ESTADO_SOLICITUD"), Label).Text)
                mLista.Add(mEntidad)
            End If
        Next
        Return mLista
    End Function

