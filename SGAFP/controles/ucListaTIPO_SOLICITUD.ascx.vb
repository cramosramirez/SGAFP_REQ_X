    Protected Sub gvLista_PageIndexChanging(ByVal sender As Object, ByVal e As System.Web.UI.WebControls.GridViewPageEventArgs) Handles gvLista.PageIndexChanging
        Me.gvLista.PageIndex = e.NewPageIndex
        If Me.ViewState("PorPROCESO") Then
            Me.CargarDatosPorPROCESO(Me.ViewState("CODIGO_PROCESO"))
            Return
        End If
        Me.CargarDatos()
    End Sub

    Public Function DevolverSeleccionados() As listaTIPO_SOLICITUD
        Dim mLista As New listaTIPO_SOLICITUD
        For Each mRow As GridViewRow In Me.gvLista.Rows
            If CType(mRow.FindControl("CheckBox_Seleccionar"), CheckBox).Checked Then
                Dim mEntidad As New TIPO_SOLICITUD
                mEntidad.ID_TIPO_SOLICITUD = CInt(CType(mRow.FindControl("Label_ID_TIPO_SOLICITUD"), Label).Text)
                mLista.Add(mEntidad)
            End If
        Next
        Return mLista
    End Function

